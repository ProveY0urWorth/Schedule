<link rel="stylesheet" href="~/css/ScheduleEditor.css" asp-append-version="true" />
@model int
@{
    ViewData["Title"] = "Добавление расписания";
}
<div>
    <div class="schedule_add_item">
        <button class="btn btn-primary rounded-pill">
            Добавить дисциплину
        </button>
        <button class="btn btn-primary rounded-pill">
            Добавить группу
        </button>
        <button class="btn btn-primary rounded-pill">
            Добавить преподавателя
        </button>
    </div>
   <div class="adding-form">
        <div class="schedule_add_item">

            <div class="schedule_add_item">
                <label for="lessonDate">Дата пары:</label>
                <input type="date" class="rounded-pill" id="lessonDate" name="lessonDate">
            </div>
            <div class="schedule_add_item">
                <label for="lesson">Время пары</label><br />
                <select name="lesson" id="lesson" class="rounded-pill" required>
                    <option value="" disabled selected>Выберите время пары</option>
                    <option value="First">8:30 - 10:00</option>
                    <option value="Second">10:10 - 11:40</option>
                    <option value="Third">11:50 - 13:20</option>
                    <option value="Fourth">14:00 - 15:30</option>
                    <option value="Fifth">15:40 - 17:10</option>
                    <option value="Sixth">17:20 - 18:50</option>
                    <option value="Seventh">19:00 - 20:30</option>
                    <option value="Eighth">20:40 - 22:10</option>
                </select>
            </div>
            <div class="schedule_add_item">
                <label for="subject">Выберите дисциплину:</label>
                <input class="rounded-pill" list="subject_list" id="subject" name="subject_name">
                <datalist id="subject_list">
                    <option value="Web-Технологии"></option>
                    <option value="Методы исследования операций"></option>
                    <option value="Моделирование систем"></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="group">Выберите группу:</label>
                <input class="rounded-pill" list="group_list" id="group" name="group_name">
                <datalist id="group_list">
                    <option value="ИС"></option>
                    <option value="ПИ"></option>
                    <option value="УТС"></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="teacher">Выберите преподавателя:</label>
                <input class="rounded-pill" list="teacher_list" id="teacher" name="teacher_name">
                <datalist id="teacher_list">
                    <option value="Карлусов В.Ю."></option>
                    <option value="Хохлов В.В."></option>
                    <option value="Дрозин А.Ю."></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="room">Выберите аудиторию:</label>
                <input class="rounded-pill" list="room_list" id="room" name="room_name">
                <datalist id="room_list">
                    <option value="Б-507"></option>
                    <option value="Г-512"></option>
                    <option value="А-505"></option>
                </datalist>
            </div>
            <label for="type_of_lesson"> Тип занятия</label>
            <div class="schedule_add_item" id="type_of_lesson">
                <label for="practicLesson">
                    Практическое занятие
                </label>
                <input type="radio" name="type" value="PL" id="practicLesson" />
                <label for="labLesson">
                    Лабораторное занятие
                </label>
                <input type="radio" name="type" value="LL" id="labLesson" />
                <label for="lecture">
                    Лекция
                </label>
                <input type="radio" name="type" value="L" id="lecture" />
            </div>
        </div>
        <div>
            <input type="text" id="commentary" placeholder="Добавить комментарий" />
        </div>
        <div class="schedule_add_item">
            <button class="btn btn-primary rounded-pill">
                Добавить
            </button>
        </div>
   </div>
    <div class="schedule_add_item">
        <button class="btn btn-primary rounded-pill">
            Просмотр(Студент)
        </button>
        <button class="btn btn-primary rounded-pill">
            Просмотр(Преподаватель)
        </button>
    </div>
</div>
