<link rel="stylesheet" href="~/css/ScheduleEditor.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Добавление расписания";
}
<div>
    <div class="schedule_add_item">
        <button class="btn btn-primary rounded-pill" id="AddSubjBtn" onclick="AddModal(this)">
            Добавить дисциплину
        </button>
        <button class="btn btn-primary rounded-pill" id="AddGroupBtn" onclick="AddModal(this)">
            Добавить группу
        </button>
        <button class="btn btn-primary rounded-pill" id="AddTeacherBtn" onclick="AddModal(this)">
            Добавить преподавателя
        </button>
        <button class="btn btn-primary rounded-pill" id="AddClassroomBtn" onclick="AddModal(this)">
            Добавить аудиторию
        </button>
    </div>
   <form class="adding-form">
        <div class="schedule_add_item">

            <div class="schedule_add_item">
                <label for="lessonDate">Дата пары:</label>
                <input type="date" class="rounded-pill" id="lessonDate" name="lessonDate" required>
            </div>
            <div class="schedule_add_item">
                <label for="lesson">Время пары</label><br />
                <select name="lesson" id="lesson" class="rounded-pill" required>
                    <option value="" disabled selected>Выберите время пары</option>
                    <option value="First">8:30 - 10:00</option>
                    <option value="Second">10:10 - 11:40</option>
                    <option value="Third">11:50 - 13:20</option>
                    <option value="Fourth">14:00 - 15:30</option>
                    <option value="Fifth">15:40 - 17:10</option>
                    <option value="Sixth">17:20 - 18:50</option>
                    <option value="Seventh">19:00 - 20:30</option>
                    <option value="Eighth">20:40 - 22:10</option>
                </select>
            </div>
            <div class="schedule_add_item">
                <label for="subject">Выберите дисциплину:</label>
                <input class="rounded-pill" list="subject_list" id="subject" name="subject_name" required>
                <datalist id="subject_list">
                    <option value="Web-Технологии"></option>
                    <option value="Методы исследования операций"></option>
                    <option value="Моделирование систем"></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="group">Выберите группу:</label>
                <input class="rounded-pill" list="group_list" id="group" name="group_name" required>
                <datalist id="group_list">
                    <option value="ИС"></option>
                    <option value="ПИ"></option>
                    <option value="УТС"></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="teacher">Выберите преподавателя:</label>
                <input class="rounded-pill" list="teacher_list" id="teacher" name="teacher_name" required>
                <datalist id="teacher_list">
                    <option value="Карлусов В.Ю."></option>
                    <option value="Хохлов В.В."></option>
                    <option value="Дрозин А.Ю."></option>
                </datalist>
            </div>
            <div class="schedule_add_item">
                <label for="room">Выберите аудиторию:</label>
                <input class="rounded-pill" list="room_list" id="room" name="room_name" required>
                <datalist id="room_list">
                    <option value="Б-507"></option>
                    <option value="Г-512"></option>
                    <option value="А-505"></option>
                </datalist>
            </div>
            <label for="type_of_lesson"> Тип занятия</label>
            <div class="schedule_add_item" id="type_of_lesson">
                <label for="practicLesson">
                    Практическое занятие
                </label>
                <input type="radio" name="type" value="PL" id="practicLesson" required/>
                <label for="labLesson">
                    Лабораторное занятие
                </label>
                <input type="radio" name="type" value="LL" id="labLesson" />
                <label for="lecture">
                    Лекция
                </label>
                <input type="radio" name="type" value="L" id="lecture" />
            </div>
        </div>
        <div>
            <input type="text" id="commentary" placeholder="Добавить комментарий" />
        </div>
        <div class="schedule_add_item">
            <button class="btn btn-primary rounded-pill" onsubmit="">
                Добавить
            </button>
        </div>
   </form>
    <div class="schedule_add_item">
        <button class="btn btn-primary rounded-pill">
            Просмотр(Студент)
        </button>
        <button class="btn btn-primary rounded-pill">
            Просмотр(Преподаватель)
        </button>
    </div>
    <div class="modal fade" role="dialog" id="AddFormModal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="ModalClose()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"></h4>
                </div>
                <div id="AddFormModalbody" class="modal-body">
                </div>
                <!--
                    <div class="modal-footer">
                    <button type="button" class="btn btn-default mr-auto" data-dismiss="modal" onclick="ModalClose()">Отмена</button>
                    <button type="button" class="btn btn-primary">Сохранить</button>
                    </div>
                -->
            </div>
        </div>
    </div>
</div>
<script src="~/js/AddingPage.js" asp-append-version="true"></script>